# frozen_string_literal: true

require 'set'

# top level
module Day2
  def get_data(filename)
    result = []
    f = File.open(filename, 'r')
    f.each_line do |line|
      result = line.strip!.split(',')
    end
    f.close
    result
  end

  def get_pairs(data)
    result = []

    data.each do |pair|
      result.push(pair.split('-'))
    end
    result
  end

  def detect_double(data)
    answer = []
    length = data.length
    half = length / 2
    f_h = data.slice(0, half)
    s_h = data.slice(half)
    puts half
    for i in 0..half do
      puts 'iter'
      puts i if f_h[i] == s_h[i]

    end
    answer.to_s
  end

  def sum_diapason(diapason)
    answer = 0
    dip = diapason.split('-')
    start = dip[0].to_i
    d_end = dip[1].to_i
    for i in start..d_end do
      answer += detect_double(i.to_s)
    end
    answer
  end
end
